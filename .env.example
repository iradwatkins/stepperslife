# ====================
# AUTH.JS CONFIGURATION
# ====================

# Required: Secret for JWT encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-here

# Required: Base URL for authentication callbacks
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (Optional - remove if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Provider Configuration (Optional - for magic links)
EMAIL_FROM=noreply@stepperslife.com
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password

# ====================
# DATABASE CONFIGURATION
# ====================

# PostgreSQL Database URL (Required for Auth.js)
DATABASE_URL=postgresql://user:password@localhost:5432/stepperslife

# ====================
# CONVEX CONFIGURATION
# ====================

# Required: Get from https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-id
CONVEX_DEPLOY_KEY=your-deploy-key

# ====================
# PAYMENT PROVIDERS
# ====================

# Square Configuration (Primary payment processor)
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_APPLICATION_ID=your-square-app-id
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-key
SQUARE_ENVIRONMENT=sandbox # or 'production'

# Stripe Configuration (Secondary payment processor)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox # or 'production'

# ====================
# OPTIONAL: VAULT CONFIGURATION
# ====================

# HashiCorp Vault (Optional - for secret management in production)
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=your-vault-token

# ====================
# OPTIONAL: MONITORING & ANALYTICS
# ====================

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-key@sentry.io/your-project

# ====================
# OPTIONAL: THIRD-PARTY SERVICES
# ====================

# Google Maps API (For event location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Cloudflare (Optional - for CDN/security)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_ACCOUNT_ID=

# ====================
# DEVELOPMENT SETTINGS
# ====================

# Node environment
NODE_ENV=development # or 'production'

# Build phase detection (used internally)
NEXT_PHASE=

# ====================
# NOTES
# ====================
# 1. Copy this file to .env.local and fill in your values
# 2. Never commit .env.local to version control
# 3. Required fields must be filled for the app to work
# 4. Optional fields can be left empty if not using that feature
# 5. For production, consider using Vault for sensitive secrets